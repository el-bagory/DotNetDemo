@model Demo.Models.Project.ProjectVM

@{
    ViewBag.Title = "Create";
}

<h1>Create Project</h1>


    <!-- Main content -->
  <form asp-action="Create" asp-controller="Project" method="post" class="form-group">
    <section class="content">
      <div class="row">
        <div class="col-md-6">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">General</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">

              <div class="form-group">
                <label asp-for="ProjectName">Project Name</label>
                <input type="text" asp-for="ProjectName" class="form-control" />
                <span class="text-danger" asp-validation-for="ProjectName"></span>
              </div>
              <div class="form-group">
                <label asp-for="ProjectDescription">Project Description</label>
                <textarea asp-for="ProjectDescription" id="inputDescription" class="form-control" rows="4"></textarea>
                <span class="text-danger" asp-validation-for="ProjectDescription"></span>
              </div>
              <div class="form-group">
                <label asp-for="ProjectStatus">Status</label>
                <select asp-for="ProjectStatus" id="inputStatus" class="form-control custom-select">
                  <option selected disabled>Select one</option>
                  <option>On Hold</option>
                  <option>Canceled</option>
                  <option>Success</option>
                </select>
                <span class="text-danger" asp-validation-for="ProjectStatus"></span>
              </div>
              <div class="form-group">
                <label asp-for="Client">Client</label>
                <input asp-for="Client" type="text" id="inputClientCompany" class="form-control">
                <span class="text-danger" asp-validation-for="Client"></span>
              </div>
               <div class="form-group">
                <label asp-for="LeaderId">Project Leader</label>
                <select asp-for="LeaderId" asp-items="@(SelectList)ViewBag.EmployeeList" id="inputStatus" class="form-control custom-select">
                  <option selected disabled>Select one</option>
                  
                </select>
                <span class="text-danger" asp-validation-for="LeaderId"></span>
              </div>
              @* <div class="form-group">
                <label asp-for="LeaderName">Project Leader</label>
                <select asp-for="LeaderName" asp-items="@(SelectList)ViewBag.EmployeeList">
        
                    <option>Choose Leader</option>    
        
                </select>
              </div> *@
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <div class="col-md-6">
          <div class="card card-secondary">
            <div class="card-header">
              <h3 class="card-title">Budget</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label asp-for="EstimatedBudget">Estimated budget</label>
                <input asp-for="EstimatedBudget" type="number" id="inputEstimatedBudget" class="form-control">
                <span class="text-danger" asp-validation-for="EstimatedBudget"></span>

              </div>
              <div class="form-group">
                <label asp-for="TotalAmountSpent">Total amount spent</label>
                <input asp-for="TotalAmountSpent" type="number" id="inputSpentBudget" class="form-control">
                <span class="text-danger" asp-validation-for="TotalAmountSpent"></span>

              </div>
              <div class="form-group">
                <label asp-for="EstimatedProjectDuration">Estimated project duration (Month)</label>
                <input asp-for="EstimatedProjectDuration" type="number" id="inputEstimatedDuration" class="form-control">
                <span class="text-danger" asp-validation-for="EstimatedProjectDuration"></span>

              </div>
              <div class="form-group">
                    <label asp-for="ProjectProgress">Progress</label>
                    <input asp-for="ProjectProgress" type="range" class="custom-range" id="customRange1" value="0">
                  </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Cancel</a>
          <input type="submit" value="Create new Project" class="btn btn-success float-right">
        </div>
      </div>
    </section>
    <!-- /.content -->
    </form>
 

<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
