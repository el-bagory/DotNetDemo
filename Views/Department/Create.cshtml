@model Demo.Models.Department.DepartmentVM

@{
    ViewBag.Title = "Create";
}

<h1>Create Depertment</h1>

<form asp-action="Create" asp-controller="Department" method="post" class="form-group">

    <label asp-for="DepartmentName">Department Name</label>
    <input type="text" asp-for="DepartmentName" class="form-control" />
    <span class="text-danger" asp-validation-for="DepartmentName"></span>
    <br/>

    <label asp-for="DepartmentCode">Department Code</label>
    <input type="text" asp-for="DepartmentCode" class="form-control" />
    <span class="text-danger" asp-validation-for="DepartmentCode"></span>

    <br/>

    <center>
        <input type="submit" value="Create new Project" class="btn btn-primary" />
    </center>
</form>




<script src="~/jquery/jquery.min.js"></script>

<!-- Validation * -->
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

