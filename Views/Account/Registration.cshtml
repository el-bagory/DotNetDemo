@model Demo.Models.Account.RegistrationVM
@{
    Layout = null;
    ViewData["Title"] = "Registration";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registration</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="~/css/demo.css">

</head>

<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <b>Demo</b>ME
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Register a new membership</p>

      <form asp-controller="Account" asp-action="Registration" method="POST">
           <div asp-validation-summary="All" class="text-danger"></div>
    

        @* fullname *@
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Full Name" asp-for="FullName" >
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
          <div class="">
                <span pan asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

         @* UserName *@
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="User Name" asp-for="UserName" >
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
          <div class="">
                <span pan asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

         @* Address *@
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Address" asp-for="Address" >
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
          <div class="">
                <span pan asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        @* Email *@

        <div class="input-group mb-3">
          <input type="email" class="form-control" asp-for="Email" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <div class="">
                <span pan asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        @* password *@
        <div class="input-group mb-3">
          <input type="password" class="form-control" asp-for="Password" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
          <div class="">
                <span pan asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

           @* Sex *@
        @* <div class="input-group mb-3">
          <label>
                <input asp-for="Sex" type="radio" value="1" checked />Male
          </label>
            <label>
                <input asp-for="Sex" type="radio" value="0" checked />Femal
          </label>
          <div class="">
                <span pan asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div> *@

        

        @* Retype password *@
        <div class="input-group mb-3">
          <input type="password" class="form-control" asp-for ="ConfirmPassword" placeholder="Confirm Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>

            <div class="">
                <s pan asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>

         @* Sex *@
        <div class="form-group">

                        <div class=" custom-control custom-radio">
                          <input asp-for="Sex" type="radio" value="1" id="customRadio1" checked  class="custom-control-input" >
                          <label for="customRadio1" class="custom-control-label">Male</label>
                        </div>
                        <div class=" custom-control custom-radio">
                            <input asp-for="Sex" type="radio" id="customRadio2" value="0" class="custom-control-input" >
                          <label for="customRadio2" class="custom-control-label">Female</label>
                        </div>

                         <div class="">
                        <span pan asp-validation-for="Sex" class="text-danger"></span>
                </div>              
          </div>
        
        <div class="form-group text-center inline-block">
            <p>Select your Avatar</p>
        </div>
        
            <div class="form-group text-center">
                <label>
                    <input asp-for="Avatar" type="radio" value="0" checked />
                    <img class="avatar-icon" src="~/images/icons/avatar1.png" alt="" />
                </label>
                <label>
                    <input asp-for="Avatar" type="radio" value="1" />
                    <img class="avatar-icon" src="~/images/icons/avatar2.png" alt="" />
                </label>
                <label>
                    <input asp-for="Avatar" type="radio" value="2" />
                    <img class="avatar-icon" src="~/images/icons/avatar3.png" alt="" />
                </label>
                <label>
                    <input asp-for="Avatar" type="radio" value="3" />
                    <img class="avatar-icon" src="~/images/icons/avatar4.png" alts="" />
                </label>
            </div>


        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
              <label for="agreeTerms">
               I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block inline-block">Register</button>
          </div>
          <!-- /.col -->
        </div>

      <div class="social-auth-links text-center inline-block">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i>
          Sign up using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i>
          Sign up using Google+
        </a>
      </div>

      <a asp-action="Login" asp-controller="Account"  class="text-center inline-block">I already have a membership</a>
      
      </form>

    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Validation * -->
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
</body>
</html>

